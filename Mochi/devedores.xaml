<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mochi.DevedoresPage"
             BackgroundColor="#B0C4DE">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Frame Grid.Row="0" BackgroundColor="White" Padding="10" CornerRadius="20" HorizontalOptions="Center">
            <Label Text="Devedores" FontSize="18" TextColor="Black" HorizontalOptions="Center"/>
        </Frame>

        <!-- Espaço vazio ou conteúdo principal -->
        <BoxView Grid.Row="1" Color="Transparent"/>

        <!-- Botões na parte inferior -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="End" Spacing="20">
           <ImageButton Source="voltar.png" Clicked="Voltar2" WidthRequest="30" HeightRequest="30"/>
            <ImageButton Source="lixeira.png" Clicked="Lixeira1" WidthRequest="30" HeightRequest="30"/>
            <ImageButton Source="adicionar.png" Clicked="Adicionar1" WidthRequest="30" HeightRequest="30"/>
        </StackLayout>
    </Grid>
</ContentPage>
