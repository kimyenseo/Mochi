<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mochi.CadastrarDevedoresPage"
             Title="Cadastrar Devedores">

       <StackLayout Padding="20">
            <Frame CornerRadius="20" BackgroundColor="#78909C" Padding="20">
                <StackLayout>
                    <Image Source="user_icon.png" HorizontalOptions="Center" />
                    <Label Text="ID:" />
                    <Label x:Name="IdLabel"/>
                    <Label Text="Cadastrar Devedor" FontSize="Medium" HorizontalOptions="Center" TextColor="Black" />
                    <Entry x:Name="NomeEntry" Placeholder="Nome" BackgroundColor="#78909C" TextColor="Black" />
                    <Entry x:Name="ValorEntry" Placeholder="Valor" Keyboard="Numeric" BackgroundColor="#78909C" TextColor="Black" />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="20,0,0,0">
                        <Button Text="Salvar" Clicked="OnSalvarClicked" BackgroundColor="White" TextColor="Black" />
                        <ImageButton Source="lixeira.png" WidthRequest="40" HeightRequest="30" Clicked="OnDeleteButtonClicked" />
                    </StackLayout>
                     <ImageButton Source="voltar.png" WidthRequest="30" HeightRequest="30" Clicked="voltarbutton" />
                </StackLayout>
            </Frame>
        </StackLayout>
</ContentPage>
